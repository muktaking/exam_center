//recursive function for expanding child categories
- let expandCat = (arg) => {
    - if (arg.childs) { // checking whatever parent has child or not
        - for (let i = 0; i < arg.childs.length; i++) {// expand the childs
            .ml-5
                p.bg-success.px-2.py-1.text-white
                    i.fa.fa-circle.fa-xs
                    span.ml-2(style="font-size:18px;")=arg.childs[i].name
                    a.mr-2(href= "/admin/editCategory/" + arg.childs[i]._id)
                        i.text-white.ml-3.fa.fa-cog.fa-sm
                    a(href= "/admin/deleteCategory/" + arg.childs[i]._id)
                        i.text-white.ml-3.fa.fa-minus.fa-sm     
            - if (arg.childs[i].childs) {// check whatever child has their child or not; if then expand
                .ml-5 
                    - expandCat(arg.childs[i])
            - }
        - }
    - }
- }